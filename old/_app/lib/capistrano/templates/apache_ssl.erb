<IfModule mod_ssl.c>
<VirtualHost *:443>
ServerAdmin  <%= fetch(:server_admin) %>
ServerName <%= fetch(:server_name) %>
ServerAlias www.<%= fetch(:server_name) %>
DocumentRoot <%= current_path %>/dist/
<Directory  <%= current_path %>/dist/ >
#AllowOverride none
AllowOverride All
</Directory>
ErrorLog <%= current_path %>/logs/error.log
CustomLog <%= current_path %>/logs/access.log combined
SSLCertificateFile /etc/letsencrypt/live/www.<%= fetch(:server_name) %>/fullchain.pem
SSLCertificateKeyFile /etc/letsencrypt/live/www.<%= fetch(:server_name) %>/privkey.pem
Include /etc/letsencrypt/options-ssl-apache.conf
</VirtualHost>
</IfModule>
